<div class="container ">

<h2>Sign Up:</h2><br>
		
<div class="col-md-8">
	<form class="form-horizontal" role="form">
			<%= form_tag("/users") do |f| %>

				<div class="form-group">
					<label for="inputEmail3" class="col-sm-2 control-label">Email</label>
					<div class="col-sm-4">
						<%= text_field_tag :email, nil, :class=> "form-control", :placeholder => "name@example.com" %>
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword3" class="col-sm-2 control-label">Password</label>
					<div class="col-sm-4">
						<%= password_field_tag :password, nil, :class=> "form-control", :placeholder => "password" %>
						
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword3" class="col-sm-2 control-label"></label>
					<div class="col-sm-4">
						<%= password_field_tag :password_confirmation, nil, :class=> "form-control", :placeholder => "password confirmation" %>
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword3" class="col-sm-2 control-label">License Plate</label>
					<div class="col-sm-2">
						<%= select_tag :plate_state,
						options_for_select(["AL", "AK","AZ","AR","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY","DC","Other"]), :class=> "form-control" %>
					</div>
					<div class="col-sm-2">
						<%= text_field_tag :plate_number, nil, :class=> "col-sm-2 form-control", :placeholder => "4ABC123" %>
					</div>
				</div>
				<div class="form-group">
				    <label for="exampleInputFile" class="col-sm-2 control-label">Vehicle Image</label>
				    <div class="col-sm-4">
				    	<input type="file" id="exampleInputFile">
				    </div>	
			  	</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= submit_tag "Sign Up", :class=>"btn btn-success col-sm-2" %>
					</div>
				</div>	

		<% end %>
	</form>
</div>
<div class="col-md-4">
	<% flash.each do |name, msg| -%>
		<%= content_tag :div, msg, class: name %>
	<% end -%>

	<% if @user %>
		<%= render partial: "shared/form_error_list", locals: { model: @user } %>
	<% end %>
</div>






	
</div>

